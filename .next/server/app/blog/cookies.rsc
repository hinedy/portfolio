<span data-line=""><span style="--shiki-light:#6F42C1;--shiki-dark:#B392F0">  .post</span><span style="--shiki-light:#24292EFF;--shiki-dark:#B392F0">(</span></span>
<span data-line=""><span style="--shiki-light:#22863A;--shiki-dark:#FFAB70">    "https://api.example.com/data"</span><span style="--shiki-light:#212121;--shiki-dark:#BBBBBB">,</span></span>
<span data-line=""><span style="--shiki-light:#24292EFF;--shiki-dark:#B392F0">    {</span></span>
<span data-line=""><span style="--shiki-light:#24292EFF;--shiki-dark:#B392F0">      key</span><span style="--shiki-light:#D32F2F;--shiki-dark:#F97583">:</span><span style="--shiki-light:#22863A;--shiki-dark:#FFAB70"> "value"</span><span style="--shiki-light:#212121;--shiki-dark:#BBBBBB">,</span></span>
